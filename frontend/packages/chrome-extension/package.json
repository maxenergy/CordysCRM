{
  "name": "@cordyscrm/chrome-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Chrome Extension for importing enterprise data from Aiqicha to CordysCRM",
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "fast-check": "^3.15.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
